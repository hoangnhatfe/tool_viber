{
  "name": "tool_viber",
  "version": "1.0.0",
  "description": "Tool Viber - Ứng dụng quản lý và tương tác với Viber",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run build:watch\" \"wait-on dist/renderer/index.html && electron .\"",
    "build": "npm run build:renderer && electron-builder",
    "build:renderer": "webpack --mode production",
    "build:watch": "webpack --mode development --watch",
    "pack": "npm run build:renderer && electron-builder --dir",
    "dist": "npm run build:renderer && electron-builder --publish=never",
    "build:windows": "npm run build:renderer && electron-builder --windows --x64 --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": ["viber", "tool", "electron", "desktop"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.1.3",
    "electron-builder": "^24.6.4",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.5.3",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.3",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.6",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.294.0",
    "tailwind-merge": "^2.1.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "build": {
    "appId": "com.toolviber.app",
    "productName": "Tool Viber",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/main.js",
      "dist/renderer/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/",
        "to": "resources/",
        "filter": ["**/*"]
      },
      {
        "from": "src/automation/",
        "to": "src/automation/",
        "filter": ["*.py"]
      }
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis",
      "sign": false,
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
